<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="healthyhouseesl.com.wellbeingapp.MainActivity_HomeScreen">
    //The following below are located in the AndroidManifest.xml which can be accessed through the
    Project Tab (instead of Anroid Tab)
    //the "android:label" is responsible for the name of the app that is seen in the home screen as
    well as the top of the app for every page
    //the "android:icon" uis responsible for what image shows up for the app in the home screen, it
    is placed in the mipmap folders and called upon

    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello and Welcome to the Healthy House Mobile Application"
        android:textColor="#000000" />
    //this is text seen at the top of the main page
    ///// Buttons are followed by their respective text files

    <ImageButton
        android:id="@+id/DocotorFAQButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/WelcomeText"
        android:src="@drawable/doctor_icon" />

    <TextView
        android:id="@+id/DoctorFAQInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WelcomeText"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@id/DocotorFAQButton"
        android:text="Press here to see frequently asked questions for your doctor"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />


    <ImageButton
        android:id="@+id/AntiBioInfoButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DocotorFAQButton"
        android:src="@drawable/pill_icon_ayy" />

    <TextView
        android:id="@+id/AntiBioInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DoctorFAQInstruction"
        android:layout_alignStart="@+id/DoctorFAQInstruction"
        android:layout_alignTop="@+id/AntiBioInfoButton"
        android:layout_marginTop="23dp"
        android:text="Press here to see information of commonly prescribed antibiotics"
        android:textColor="#000000" />


    <ImageButton
        android:id="@+id/IllnessesInfoButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/AntiBioInfoButton"
        android:src="@drawable/thermometer" />

    <TextView
        android:id="@+id/IllnessesInfoInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/IllnessesInfoButton"
        android:layout_toRightOf="@+id/IllnessesInfoButton"
        android:text="Press here to see info concerning common illnesses"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />


    <ImageButton
        android:id="@+id/LocationButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/IllnessesInfoButton"
        android:src="@drawable/map_icon" />

    <TextView
        android:id="@+id/LocationButtonInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/LocationButton"
        android:layout_marginBottom="29dp"
        android:layout_toEndOf="@+id/LocationButton"
        android:layout_toRightOf="@+id/LocationButton"
        android:text="Press here to browse local medical clinics"
        android:textColor="#000000" />


    <ImageButton
        android:id="@+id/DoAndDontButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LocationButton"
        android:src="@drawable/check_mark" />

    <TextView
        android:id="@+id/DosAndDontsInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/DoAndDontButton"
        android:layout_marginBottom="26dp"
        android:layout_toEndOf="@+id/DoAndDontButton"
        android:layout_toRightOf="@id/DoAndDontButton"
        android:text="Press here to see common Do's and Don'ts"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:autoLink="all"
        android:text="http://healthyhousemerced.org (209)724-0102"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000" />
    />
</RelativeLayout>
